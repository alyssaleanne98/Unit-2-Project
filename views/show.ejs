        }

        .G2 {
            transform: translate(-2px, 17px) rotate(10deg);
        }

        .e3 {
            transform: translate(-3px, 28px) rotate(15deg);
        }

        .e4 {
            transform: translate(-6px, 47px) rotate(20deg);
        }

        .k2 {
            transform: translate(-17px, 70px) rotate(25deg);
